{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Update this line
    "moduleResolution": "node", // Update this line
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@component": ["./src/components/index.ts"],
      "@interfaces": ["utils/Defs/interface.ts"],
      "@types": ["utils/Defs/types.ts"],
      "@Providers": ["src/components/Providers/ThemeProvider"],
      "@Controllers": ["src/components/Controllers/index.ts"],
      "@Validators": ["utils/Helpers/formValidations.ts"],
      "@InitalVal": ["utils/Helpers/IntialsVals.ts"]
    }
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
